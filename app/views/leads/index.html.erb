<h1>Leads</h1>

<div class="row">
	<div class="row" style="margin-bottom: 5px">
	    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<%= link_to 'Add new lead', new_lead_path, :class => "btn btn-primary" %>
	    </div>
	</div>
	
	<table class="table table-hover">
		<tr>
			<th>Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
		<% @leads.each do |lead| %>
			<tr>
				<td>
					<%= lead.FirstName %>
				</td>
				<td>
					<%= lead.LastName %>
				</td>
				<td>
					<%= lead.Email %>
				</td>
				<td>
					<a class="btn btn-default" href="/lead/<%= lead.Id %>">Details</a>
				</td>
			</tr>
		<% end %>
	</table>
</div>